<h3>todos los las cosas que quieres hacer </h3>

<% @todos.each do |todo| %>
<br>
<div class="card" style="width: 100%;">
    <div class="card-body text-center">

     <p class="card-text"> <%= todo.description %> </p>
     <%# <p class="card-text">  <%= todo.completed </p> %>
     <%# <a href="#" class="btn btn-primary">Go somewhere</a> %>
     <%= link_to 'mostrar', todo, class:'btn btn-secondary' %>
     <%= link_to 'editar', todo_edit_path(todo), class: 'btn btn-secondary' %>
     <%= link_to 'Borrar', todo, method: :delete, class: 'btn btn-danger' %>
     
     <%= link_to 'completar la tarea', completed_path(todo), class: 'btn btn-success' %>
     
    </div>

</div>


 
<% end %>
<br>
<%= link_to 'Nuevo to Do', todos_new_path, class: 'btn btn-success' %>
<%= link_to 'Make a list', todos_list_path, class: 'btn btn-warning'%> 






