<div class="card" style="width: 18rem;">
    <div class="card-body">


        <h3> Modificar un todo </h3>

                <%= form_with model: @todo, local: true do |f| %>
                <%= f.label :description, 'nombre de todo' %>
                <%= f.text_field :description %>

                <%= f.label :completed, 'tarea finalizada' %>
                <%= f.check_box :completed %>

                <%= f.submit 'enviar' %>

                <% end %>

</div>
    </div>

<%= link_to 'back', todos_path %>





